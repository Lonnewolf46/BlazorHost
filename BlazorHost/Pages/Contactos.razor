@page "/contacto"

<MudText Align="Align.Center" Typo="Typo.h1">
    Información de contacto
</MudText>

<MudStack Justify="Justify.Center" AlignItems="AlignItems.Center">
    <MudPaper Class="pa-8" Outlined="true" MinWidth="50px">
        <MudText Class="ma-2">Puede contactarnos a los siguentes números telefónicos</MudText>
        <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center" Class="mt-3" Row="true">
            <MudIcon Icon="@Icons.Material.Outlined.Phone" Color="Color.Primary"></MudIcon>
            <MudText Typo="Typo.body1">2771-1113</MudText>
        </MudStack>

        <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center" Class="mt-3" Row="true">
            <MudIcon Icon="@Icons.Material.Outlined.Phone" Color="Color.Primary"></MudIcon>
            <MudText Typo="Typo.body1">2771-2030</MudText>
        </MudStack>

        <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center" Class="mt-3" Row="true">
            <MudIcon Icon="@Icons.Custom.Brands.WhatsApp" Color="Color.Primary"></MudIcon>
            <MudText Typo="Typo.body1">8321-6724</MudText>
        </MudStack>


        <MudStack Class="pt-8" Justify="Justify.Center" AlignItems="AlignItems.Center">
            <MudText Align="Align.Center" Typo="Typo.h2" Class="ma-2">Horario</MudText>
            <MudStack Justify="Justify.Center" Row>
                <MudStack>
                    <MudStack Row>
                        <MudIcon Icon="@Icons.Material.Filled.CalendarMonth"></MudIcon>
                        <MudText>Lunes a Viernes</MudText>
                    </MudStack>
                    <MudStack Row>
                        <MudIcon Icon="@Icons.Material.Filled.LockClock"></MudIcon>
                        <MudText>06:30 a 18:00</MudText>
                    </MudStack>
                </MudStack>
                <MudStack>
                    <MudStack Row>
                        <MudIcon Icon="@Icons.Material.Filled.CalendarMonth"></MudIcon>
                        <MudText>Sábados</MudText>
                    </MudStack>
                    <MudStack Row>
                        <MudIcon Icon="@Icons.Material.Filled.LockClock"></MudIcon>
                        <MudText>06:30 a 13:00</MudText>
                    </MudStack>
                </MudStack>
            </MudStack>
        </MudStack>

    </MudPaper>
</MudStack>


